<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="buttonExtraHeight">10dp</dimen>

    <declare-styleable name="Counter">
        <attr name="textColor" format="color"/>
        <attr name="buttonBackgroundColor" format="color"/>
        <attr name="iconColor" format="color"/>
        <attr name="unit" format="integer">
            <flag name="KG" value="0" />
            <flag name="Litre" value="1"/>
            <flag name="Grams" value="2"/>
            <flag name="Length" value="3"/>
            <flag name="Units" value="4"/>
        </attr>
        <attr name="changeByValue" format="float"/>
        <attr name="minCounterValue" format="float"/>
        <attr name="counterButtonSize" format="dimension"/>
        <attr name="buttonCornerRadius" format="dimension"/>
        <attr name="counterValueType" format="integer">
            <flag name="integer" value="0"/>
            <flag name="floating" value="1"/>
        </attr>
        <attr name="useStyle2" format="boolean"/>
        <attr name="style2StrokeWidth" format="dimension"/>
    </declare-styleable>

</resources>